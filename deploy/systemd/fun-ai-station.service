[Unit]
Description=fun-ai-station (Next.js)
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/fun-ai-station
ExecStart=/usr/bin/npm run start
Restart=always
RestartSec=2

# 不依赖 systemd 环境变量：
# - Next.js 的 NEXT_PUBLIC_* 在 build 时从 .env.production 注入
# - 上线时修改 .env.production 后，需要重新 npm run build

[Install]
WantedBy=multi-user.target

